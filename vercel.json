{
	"functions": {
		"api/**": {
			"excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
		}
	},
	"rewrites": [
		{
			"source": "/api/scraper/:path*",
			"destination": "/api/index.py"
		}
	],
	"routes": [
		{
			"src": "/api/shopping-lists/items/[^/]+",
			"dest": "/api/shopping-lists/items/$1"
		},
		{
			"src": "/api/(.*)",
			"dest": "/api/$1"
		}
	]
}
